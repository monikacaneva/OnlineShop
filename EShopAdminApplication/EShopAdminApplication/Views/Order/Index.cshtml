@model List<EShopAdminApplication.Models.Order>


<div class="container">
    <div class="row">
        <a asp-controller="Order" asp-action="ExportAllOrders" class="btn btn-info">Export Orders</a>
    </div>

    <div class="row m-5">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Customer details
                    </th>
                    <th>
                        Number of products
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>
                            @item.User.UserName
                        </td>

                        <td>
                            @item.ProductInOrders.Count()
                        </td>
                        <td>
                            |
                            <a asp-action="Details" asp-route-OrderId="@item.Id" class="btn btn-info">View Order</a>
                        </td>
                        <td>
                            |
                            <a asp-action="CreateInvoice" asp-route-OrderId="@item.Id" class="btn btn-info">Create Invoice</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>